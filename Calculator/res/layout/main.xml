<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:textSize="25pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*" >

        <TableRow android:id="@+id/TableRow00" >

            <Button
                android:id="@+id/clear"
                android:layout_column="0"
                android:layout_span="2"
                android:text="C"
                android:textSize="28px" />

            <Button
                android:id="@+id/delete"
                android:layout_column="2"
                android:layout_span="2"
                android:text="DEL"
                android:textSize="28px" />
        </TableRow>

        <!-- line of 7-8-9-division_sign -->

        <TableRow android:id="@+id/TableRow01" >

            <Button
                android:id="@+id/figure_7"
                android:text="7"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_8"
                android:text="8"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_9"
                android:text="9"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/division_sign"
                android:text="/"
                android:textSize="@dimen/TenPx" />
        </TableRow>

        <!-- line of 4-5-6-multiple_sign -->

        <TableRow android:id="@+id/TableRow02" >

            <Button
                android:id="@+id/figure_4"
                android:text="4"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_5"
                android:text="5"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_6"
                android:text="6"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/multiple_sign"
                android:text="*"
                android:textSize="@dimen/TenPx" />
        </TableRow>

        <!-- line of 1-2-3-minus_sign -->

        <TableRow android:id="@+id/TableRow03" >

            <Button
                android:id="@+id/figure_1"
                android:text="1"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_2"
                android:text="2"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_3"
                android:text="3"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/minus_sign"
                android:text="-"
                android:textSize="@dimen/TenPx" />
        </TableRow>

        <!-- line of .-0-=-plus_sign -->

        <TableRow android:id="@+id/TableRow04" >

            <Button
                android:id="@+id/point"
                android:text="."
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/figure_0"
                android:text="0"
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/equal"
                android:text="="
                android:textSize="@dimen/TenPx" />

            <Button
                android:id="@+id/plus_sign"
                android:text="+"
                android:textSize="@dimen/TenPx" />
        </TableRow>
    </TableLayout>

</LinearLayout>